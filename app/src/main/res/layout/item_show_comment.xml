<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:layout_margin="@dimen/_4sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_4sdp"
        android:orientation="vertical">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_score"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_oval_score"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingRight="@dimen/_4sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:textColor="@color/white"
                android:textSize="12sp" />
            <TextView
                android:textSize="@dimen/_10sdp"
                android:id="@+id/txt_title"
                android:textColor="@color/grey_900"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_toLeftOf="@id/txt_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout

            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/grey_500"
                android:textSize="10sp"
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_user"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_centerVertical="true"
                android:textColor="@color/grey_500"
                android:textSize="10sp"
                android:layout_toLeftOf="@id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@color/grey_300"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/txt_advice"
            android:textSize="@dimen/_8sdp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/_8sdp"
            android:textSize="@dimen/_8sdp"
            android:textColor="@color/grey_900"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_toLeftOf="@id/txt_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@color/grey_300"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:textColor="@color/grey_900"
            android:layout_gravity="right"
            android:text="نقاط قوت"
            android:textSize="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="@dimen/_4sdp"
            android:textSize="@dimen/_7sdp"
            android:textColor="@color/green_600"
            android:id="@+id/txt_posotive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_marginTop="@dimen/_4sdp"
            android:textColor="@color/grey_900"
            android:layout_gravity="right"
            android:text="نقاط ضعف"
            android:textSize="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="@dimen/_4sdp"
            android:textSize="@dimen/_7sdp"
            android:textColor="@color/red"
            android:id="@+id/txt_negative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@color/grey_300"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>