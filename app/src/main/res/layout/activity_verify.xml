<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.profile.auoth.VerifyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <com.mukesh.OtpView
            android:id="@+id/edt_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:itemBackground="@color/grey_100"
            android:textColor="@color/black"
            app:OtpCursorColor="@color/green_600"
            app:OtpItemCount="4"
            app:OtpItemHeight="@dimen/_32sdp"
            app:OtpItemRadius="@dimen/_8sdp"
            app:OtpItemSpacing="@dimen/_4sdp"
            app:OtpItemWidth="@dimen/_32sdp"
            app:OtpLineColor="@color/green_600"
            app:OtpViewType="rectangle"
            />
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>